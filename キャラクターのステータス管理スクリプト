public class Character_Status : MonoBehaviour {

    public class SHION_STATUS
    {
        //シオンのレベル
        public int shion_lv;

        //シオンの最大HP
        public float shion_max_hp;
        //シオンのHP
        public float shion_hp;

        //シオンの最大MP
        public int shion_max_mp;
        //シオンのMP
        public int shion_mp;

        //シオンの最大攻撃力
        public int shion_max_power;
        //シオンの攻撃力
        public int shion_power;


        //シオンの最大技威力
        public int shion_max_skill;
        //シオンのMP
        public int shion_skill;

        //戦闘不能状態かどうかの判定
        public bool shion_dead_judge;
        
        //コンストラクター
        public SHION_STATUS()
        {
            //初期ステータス
            //シオンのレベル
            shion_lv = 1;
            //シオンの最大HP
            shion_max_hp = 300;
            //シオンのHP
            shion_hp = 300;
            //シオンの最大MP
            shion_max_mp = 100;
            //シオンのMP
            shion_mp = 100;
            //シオンの最大攻撃力
            shion_max_power = 120;
            //シオンの攻撃力
            shion_power = 80;
            //シオンの最大技威力
            shion_max_skill = 150;
            //シオンの技威力
            shion_skill = 120;
            //戦闘不能状態かどうかの判定 false:死んでいない true:死んでいる
            shion_dead_judge = false;
        }
    }

    //ヒョウステータスのクラスのインスタンス化
    public SHION_STATUS ss = new SHION_STATUS();

